[mysqld]
skip-host-cache
skip-name-resolve

# 注意：对于启动选项和系统变量来说，如果启动选项和系统变量名由多个单词组成，各个单词之间用短划线（-）或者下划线（_）连接起来都可以，但是它对应的系统变量的单词之间必须使用下划线（_）连接起来（即通过show查看或set设置时）
# 见官方文档 (https://dev.mysql.com/doc/refman/8.0/en/using-system-variables.html)
# 如果生产环境需要修改配置，建议采用 “临时设置方式 + 永久设置方式”来解决线上的问题，那么即便是有一天真的重启了MySQL服务，也会永久生效了。

# 默认使用“mysql_native_password”插件认证
default_authentication_plugin=mysql_native_password
# 默认存储引擎
default-storage-engine=INNODB
# 服务端使用的字符集默认为utf8mb4
character-set-server=utf8mb4
# 比较规则
collation-server=utf8mb4_general_ci

# binlog日志位置
log_bin=/var/log/binlog/binlog

# 慢查询日志
#slow_query_log=1
#slow_query_log_file=/var/log/slow

# redolog
#innodb_log_group_home_dir=/var/log/redo

# 临时文件
#tmpdir=/var/log/tmpdir

# 错误日志
#log-error=/var/log/error